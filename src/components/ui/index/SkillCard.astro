---
import FadedText from '../FadedText.astro'

export interface Props {
    title: string;
    image: string;
}

const { title, image } = Astro.props;
---

<div class="flex flex-col bg-terciary border-2 border-secondary px-4 py-4">
    <div class="flex flex-col space-y-4 pt-16">
        <div class="h-10 w-10">
			<img src=`/images/skills/${image}`/>
		</div>
        <FadedText>
            <p class="text-lg">{title}</p>
        </FadedText>
        <span class="text-secondary text-sm">
            <slot />
        </span>
    </div>
</div>