---
import { Icon } from 'astro-icon'

export interface Props {
    title: string;
    href: string;
    target_blank?: boolean;
    icon: string;
}

const { title, href, target_blank, icon } = Astro.props;
---
<a class="bg-terciary border-secondary border-2 px-4 py-4" href={href}>
    <div class="flex flex-row space-x-2 text-secondary">
        <Icon pack="mdi" name={icon} class="w-5 h-5" />
        <p class="text-sm">{title}</p>
    </div>  
</a>