---
import RootLayout from '../../layouts/RootLayout.astro';
import ButtonIcon from '../../components/ui/ButtonIcon.astro'
import Divider from '../../components/ui/Divider.astro'
import BigHeader from '../../components/ui/BigHeader.astro'
import SkillCard from '../../components/ui/index/SkillCard.astro'
---

<RootLayout title="Pedro Ribeiro">
	<div class="flex flex-col space-y-2 items-center py-16 text-secondary">
		<div class="h-32 w-32">
			<img src="/images/profile.jpg" class="rounded-full" />
		</div>
		<p class="text-md">Hi, I'm Pedro ðŸ‘‹</p>
	</div>
	<div class="flex flex-col space-y-16 items-center text-center ">
		<BigHeader text="I'm a Fullstack developer and technology enthusiast." />
		<ButtonIcon title="Check past work" href="/work" icon="briefcase" />
	</div>
	<div class="flex flex-col items-center text-center py-20">
		<BigHeader text="Collaborate with me in order to make your idea come to fruition." />
	</div>
	<div class="grid grid-rows-4 grid-cols-1 lg:grid-cols-4 lg:grid-rows-1 gap-4 pt-4 pb-24">
		<SkillCard title="UX & UI" image="ux_ui.png">
			<p>Design interfaces that are intuitive, efficient and enjoyable to use.</p>
		</SkillCard>
		<SkillCard title="Web & Mobile App" image="web_mobile_app.png">
			<p>Transforming ideas into exceptional web and mobile app experiences.</p>
		</SkillCard>
		<SkillCard title="Design & Creative" image="design_creative.png">
			<p>Crafting visually stunning designs that connect with your audience.</p>
		</SkillCard>
		<SkillCard title="Development" image="development.png">
			<p>Bringing your vision to life with the latest technology and design trends.</p>
		</SkillCard>
	</div>
	<Divider />
	<div class="flex flex-col items-center text-center space-y-12 py-20">
		<BigHeader text="Tell me about your next project idea." />
		<ButtonIcon title="Contact me" href="/home/contact" icon="email" />
	</div>
</RootLayout>
